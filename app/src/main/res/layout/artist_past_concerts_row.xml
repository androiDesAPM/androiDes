<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginHorizontal="100dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:layout_gravity="center_horizontal"
    android:rowCount="4"
    android:columnCount="3"
    android:background="#6A939393">

    <TextView
        android:id="@+id/concertName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del concierto  "
        android:layout_row="0"
        android:layout_column="0"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/concertDate1"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/concertDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha del concierto"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/concertCountry1" />

    <TextView
        android:id="@+id/concertCountry1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="PaÃ­s"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/cameraIcon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@android:drawable/ic_menu_camera"
        android:backgroundTint="#000000" />

    <ImageButton
        android:id="@+id/concertPhotos1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:background="@android:drawable/ic_menu_gallery"
        android:backgroundTint="#000000" />
</GridLayout>