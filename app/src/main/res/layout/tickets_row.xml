<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ticketBox1"
        android:layout_width="331dp"
        android:layout_height="152dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:showIn="@layout/user_tickets">

        <TextView
            android:id="@+id/artistNameTicket"
            android:layout_width="245dp"
            android:layout_height="42dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Artista 1"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="31sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/locationTicket"
            app:layout_constraintEnd_toStartOf="@+id/three_points_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/locationTicket"
            android:layout_width="250dp"
            android:layout_height="34dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="64dp"
            android:text="@string/lugar"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/fechaTicket"
            android:layout_width="246dp"
            android:layout_height="37dp"
            android:layout_marginBottom="17dp"
            android:text="Fecha"
            android:textColor="#003BE8"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/locationTicket"
            app:layout_constraintTop_toBottomOf="@+id/locationTicket" />

        <ImageButton
            android:id="@+id/three_points_1"
            android:layout_width="62dp"
            android:layout_height="73dp"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.126"
            app:srcCompat="@drawable/baseline_more_vert_24"
            app:tint="#575757" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>